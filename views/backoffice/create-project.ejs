<%- include('../includes/head.ejs') %>

    </head>

    <body>
        <%- include('../includes/navigation.ejs', {role: role}) %>
            <main>
                <h3>Create a Project</h3>
                <div class="box-form">
                    <form id="formCreateProject" autocomplete="off" action="/projects/new-project", method="POST">
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="inputName">Project's Name</label>
                                <input type="text" name="name" class="form-control" id="inputName" placeholder="Name">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputClient">Client</label>
                                <input
                                    onkeyup="showState('Client;'+this.value, document.getElementById('datalist'), this)"
                                    list="datalist" autocomplete="off" type="text" name="client" class="form-control"
                                    id="inputClient" placeholder="Client">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputSector">Sector</label>
                                <input
                                    onkeyup="showState('Sector;'+this.value, document.getElementById('datalist'), this)"
                                    list="datalist" autocomplete="off" type="text" name="sector" class="form-control"
                                    id="inputSector" placeholder="Sector">
                            </div>
                        </div>
                        <hr>
                        <div id="techRow" class="form-row">
                            
                        </div>
                        <button onclick="createRow('techRow');" type="button" class="btn btn-secondary">Add Tech</button>
                        <hr>
                        <div id="profileRow" class="form-row">
                            
                        </div>
                        <button onclick="createRow('profileRow');" type="button" class="btn btn-secondary">Add Profile</button>
                        <hr>
                        <button type="submit" class="btn btn-primary">Create Project</button>
                    </form>
                    <br>
                    <datalist id="datalist">
                        <option>Loading...</option>
                    </datalist>
                </div>
            </main>
    </body>
    <script src="/js/ajax.js"></script>
    <script src="/js/project.js"></script>

    </html>