                </div> -->
            <button type="submit" class="btn btn-primary">Search</button>
            <% if(role !== 'basic'){ %>
              <a href="/project/new-project" class="btn btn-secondary">Create Project</a>
            <% } %> 
            
          </form>
        </div>
        <div class="showResults">
          <% if(projects) { %>
            <div class="results">
              <div class="container">
                <div class="row">
                  <div class="col-md-12">
                    <div class="card">
                      <div class="card-body">
                        <h5 class="card-title text-uppercase mb-0">Manage Projects</h5>
                      </div>
                      <div class="table-responsive">
                        <table class="table no-wrap user-table mb-0">
                          <thead>
                            <tr>
                              <th scope="col" class="border-0 text-uppercase font-medium pl-4">Client</th>
                              <th scope="col" class="border-0 text-uppercase font-medium">Project Name</th>
                              <th scope="col" class="border-0 text-uppercase font-medium">Author</th>
                              <th scope="col" class="border-0 text-uppercase font-medium">Sector</th>
                              <th scope="col" class="border-0 text-uppercase font-medium">Added</th>
                              <th scope="col" class="border-0 text-uppercase font-medium">Info</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% for (let p of projects) {%>
                              <tr>
                                <td class="pl-4">
                                  <!-- <% %> --> Client's name
                                </td>
                                <td>
                                  <h5 class="font-medium mb-0">
                                    <%=p.name%>
                                  </h5>
                                </td>
                                <td>
                                  <span class="text-muted">
                                    <%=p.author%>
                                  </span><br>
                                </td>
                                <td>
                                  <!-- <select class="form-control category-select" id="exampleFormControlSelect1">
