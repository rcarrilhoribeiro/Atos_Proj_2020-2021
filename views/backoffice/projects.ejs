      <main>
        <h3>Search Projects</h3>
        <div class="box-form">
          <form action="/projects" , method="GET">
            <div class="form-row">
              <div class="form-group col-md-4">
                <label for="inputEmail">Author's Email</label>
                <input type="email" name="author" class="form-control" id="inputEmail" placeholder="Email">
              </div>
              <div class="form-group col-md-4">
                <label for="inputName">Project's Name</label>
                <input type="text" name="name" class="form-control" id="inputName" placeholder="Name">
              </div>
              <div class="form-group col-md-4">
                <label for="inputName">Client</label>
                <input type="text" name="client" class="form-control" id="inputName" placeholder="Client">
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-3">
                <label for="inputSector">Sector</label>
                <select name="sector" id="inputSector" class="form-control">
                  <option selected></option>
                  <option>Research & Development</option>
                  <option>Production</option>
                  <option>Investment</option>
                </select>
              </div>
              <div class="form-group col-md-3">
                <label for="inputTech">Technologies</label>
                <select name="tech" id="inputTech" class="form-control">
                  <option selected></option>
                  <option>Nodejs</option>
                  <option>NET Core</option>
                  <option>PHP</option>
                </select>
              </div>
              <div class="form-group col-md-3">
                <label for="date-input">From</label>
                <input name="from" class="form-control" type="date" value="YYYY-MM-DD" id="date-input">
              </div>
              <div class="form-group col-md-3">
                <label for="date-input">To</label>
                <input name="to" class="form-control" type="date" value="YYYY-MM-DD" id="date-input">
              </div>
              
            </div>

